{
    "AWSEBDockerrunVersion": "2",
    "volumes": [
        {
            "name": "random_walker",
            "host": {
                "sourcePath": "/var/app/current"
            }
        },
        {
            "name": "nginxconf",
            "host": {
                "sourcePath": "/var/app/current/nginx/sites-enabled"
            }
        },
        {
            "name": "postgresconf",
            "host": {
                "sourcePath": "/var/app/current/postgis/init"
            }
        }
    ],
    "containerDefinition": [
        {
            "name": "random_walker_django",
            "image": "mkao006/random_walker:latest",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "containerPort": 8000
                }
            ]
        },
        {
            "name": "random_walker_nginx",
            "image": "nginx",
            "essential": true,
            "environment": [
                {
                    "name": "Container",
                    "value": "nginx"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "nginxconf",
                    "containerPath": "/etc/nginx/sites-enabled",
                    "readOnly": true
                }
            ],
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "random_walker_django"
            ]
        },
        {
            "name": "random_walker_postgis",
            "image": "mdillon/postgis",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 5432,
                    "containerPort": 5432
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "postgisconf",
                    "containerPath": "/docker-entrypoint-initdb.d/",
                    "readOnly": true
                }
            ]
        }
    ]
}
