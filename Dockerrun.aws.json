{
    "AWSEBDockerrunVersion": "2",
    "authentication": {
        "bucket": "random-walker",
        "key": ".docker/config.json"
    },
    "volumes": [
        {
            "name": "nginxconf",
            "host": {
                "sourcePath": "/var/app/current/nginx/sites-enabled"
            }
        },
        {
            "name": "postgisconf",
            "host": {
                "sourcePath": "/var/app/current/postgis/init"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "random_walker",
            "image": "mkao006/random_walker:latest",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "containerPort": 8000
                }
            ]
        },
        {
            "name": "random_walker_nginx",
            "image": "nginx",
            "essential": true,
            "memory": 128,
            "mountPoints": [
                {
                    "sourceVolume": "nginxconf",
                    "containerPath": "/etc/nginx/sites-enabled",
                    "readOnly": true
                }
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "random_walker"
            ]
        },
        {
            "name": "random_walker_postgis",
            "image": "mdillon/postgis",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 5432,
                    "containerPort": 5432
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "postgisconf",
                    "containerPath": "/docker-entrypoint-initdb.d/",
                    "readOnly": true
                }
            ]
        }
    ]
}
